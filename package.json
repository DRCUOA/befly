{
  "name": "writing-platform",
  "version": "0.3.1",
  "description": "Personal Writing Platform (Vendor-Neutral, Self-Hosted)",
  "private": true,
  "scripts": {
    "dev": "concurrently -n server,client -c blue,green \"npm run dev --workspace=server\" \"npm run dev --workspace=client\"",
    "dev:server": "npm run dev --workspace=server",
    "dev:client": "npm run dev --workspace=client",
    "migrate": "bash scripts/migrate.sh",
    "seed": "bash scripts/seed.sh",
    "reset-db": "bash scripts/reset-db.sh"
  },
  "workspaces": [
    "client",
    "server",
    "shared"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
